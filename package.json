{
  "name": "smart-namecard",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run --prefix ./apps/web dev\" \"npm run --prefix ./server dev\"",
    "build": "npm run build:web && npm run build:functions",
    "build:web": "cd apps/web && npm run build && echo \"Web build completed\"",
    "build:functions": "cd server && npm run build:firebase && echo \"Functions build completed\"",
    "deploy": "node scripts/deploy.js",
    "deploy:web": "npm run build:web && firebase deploy --only hosting",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:full": "npm run build && firebase deploy",
    "setup:firebase": "cd apps/web && npm run setup-firestore",
    "setup:check": "node scripts/checkFirebaseCLI.js",
    "emulate": "npm run build && firebase emulators:start",
    "emulate:dev": "concurrently \"npm run --prefix ./apps/web dev\" \"firebase emulators:start\"", 
    "init:firestore": "cd apps/web && npm run setup-firestore",
    "migrate:data": "cd apps/web && npm run migrate-data",
    "migrate:helper": "node scripts/migrateHelper.js",
    "firebase:login": "firebase login",
    "firebase:logout": "firebase logout",
    "firebase:list": "firebase projects:list",
    "firebase:validate": "node scripts/validateFirebaseConfig.js",
    "setup": "node scripts/setup.js",
    "test": "npm run --prefix ./apps/web test && npm run --prefix ./server test",
    "lint": "eslint --ext .ts,.tsx .",
    "lighthouse": "lighthouse http://localhost:3000 --output-path=./lighthouse-report.html",
    "e2e": "playwright test",
    "preview": "npm run --prefix ./server start"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lighthouse": "^11.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
